{
  "name": "server-scaffolding",
  "version": "0.1.0",
  "description": "Backend server with CRUD API, simple web GUI & built-in user management",
  "main": "./src/internal/server.js",
  "scripts": {
    "dev": "nodemon ./src/internal/server.js",
    "start": "pm2 start ecosystem.config.js && pm2 logs",
    "stop": "pm2 delete ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js && pm2 logs",
    "trace-sync": "node --trace-sync-io ./src/internal/server.js",
    "inspect": "nodemon --inspect ./src/internal/server.js",
    "unlock-user": "node ./src/internal/utils/Users.unlock.js",
    "test": "jest ./src/"
  },
  "keywords": [],
  "author": "bathtaters",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bathtaters/server-scaffolding"
  },
  "engines": {
    "node": "18.6.0"
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "connect-flash": "^0.1.1",
    "connect-sqlite3": "^0.9.13",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-graceful-exit": "^0.5.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.1",
    "hat": "^0.0.3",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^5.2.0",
    "pug": "^3.0.2",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "supertest": "^6.2.4",
    "supertest-session": "^4.1.0"
  }
}
