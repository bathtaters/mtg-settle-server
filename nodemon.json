{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".gitignore",
    ".logs",
    ".db",
    "coverage",
    "public",
    "README*.*",
    "jest*.*",
    "package-lock.json",
    "node_modules"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ext": "js,json,env"
}