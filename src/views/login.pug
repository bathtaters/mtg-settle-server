extends base

block scripts
  script(src="/javascripts/togglePassword.js")

block content
  .row

    .card.large.col.center
      form(action=postURL method="POST")
        fieldset
          legend= isUser ? "Login" : "Create Admin"

          .input-group.fluid
            label(for="username") Username
            input#username(
              type="text" placeholder="Enter Username" name="username" autocomplete="username"
            )

          .input-group.fluid
            label(for="password") Password
            input#password(
              type="password" placeholder="Enter Password" name="password"
              autocomplete=(isUser ? "current-password" : "new-password")
            )
            button.toggle-password.small(type="button")

          .button-group
            input.button(type="submit" value=(isUser ? "Login" : "Create"))